<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LatihanBab6.ResultTanya6Activity"
    android:background="@drawable/latihanbackground">




    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/gambar"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/ic_hero_employee__two_color"
                android:layout_marginTop="80dp"
                android:layout_gravity="center"/>

            <TextView
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:textColor="#ffff"
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Nilai anda adalah"/>

            <TextView
                android:fontFamily="sans-serif"
                android:id="@+id/txt_nilai"
                android:textColor="#ffff"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="100dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Comment"
                android:textColor="#ffff"
                android:fontFamily="sans-serif"
                android:textStyle="bold"
                android:gravity="center"/>

            <Button
                android:id="@+id/notif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="Latihan Selanjutnya"
                android:textSize="16dp"
                android:textColor="#ffff"
                android:textStyle="bold"
                android:visibility="invisible" />



            <Button
                android:id="@+id/btn_cobalagi"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_kuning"
                android:layout_height="wrap_content"
                android:text="coba lagi"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#ffff"
                android:layout_marginBottom="30dp"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>